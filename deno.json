{
  "nodeModulesDir": "auto",
  "unstable": ["fmt-component"],
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "prepare": "svelte-kit sync",
    "start": "deno task build && wrangler pages dev",
    "check": "deno task prepare && deno lint && deno fmt",
    "deploy": "deno task build && wrangler pages deploy"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@std/text": "jsr:@std/text@^1.0.16",
    "@sveltejs/adapter-cloudflare": "npm:@sveltejs/adapter-cloudflare@^7.2.4",
    "@sveltejs/kit": "npm:@sveltejs/kit@^2.48.4",
    "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^6.2.1",
    "sass-embedded": "npm:sass-embedded@^1.93.3",
    "svelte": "npm:svelte@^5.43.3",
    "vite": "npm:vite@^7.2.0",
    "highlight.js": "npm:highlight.js@^11.11.1",
    "marked": "npm:marked@^16.4.1",
    "marked-gfm-heading-id": "npm:marked-gfm-heading-id@^4.1.2",
    "marked-highlight": "npm:marked-highlight@^2.2.2",
    "wrangler": "npm:wrangler@^4.45.4"
  },
  "fmt": {
    "lineWidth": 100,
    "semiColons": false,
    "useBraces": "preferNone",
    "trailingCommas": "never"
  },
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    }
  },
  "exclude": [
    ".svelte-kit",
    ".wrangler",
    ".vite",
    "node_modules",
    "deno.lock"
  ]
}
